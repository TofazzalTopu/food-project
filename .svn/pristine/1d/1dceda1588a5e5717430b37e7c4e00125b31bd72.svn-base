<g:if test="${flash.message}">
    <script type="text/javascript">
        $(document).ready(function () {
            MessageRenderer.render(${flash.message})
        });
    </script>
</g:if>
<g:if test="${Message.MESSAGE}">
    <script type="text/javascript">
        $(document).ready(function () {
            MessageRenderer.render(${message})
        });
    </script>
</g:if>
