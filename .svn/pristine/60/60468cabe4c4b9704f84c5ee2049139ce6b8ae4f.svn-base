<table style="float: left ">
    <tr>
        <td>
            <label class="txtright bold hight3x width1x" style="width: 120px;">
                <g:message code="customerMaster.presentAddress.label" default="Present Address"/>
                <span class="mendatory_field">*</span>
            </label>
        </td>
        <td class="element-input inputContainer">
            <g:textArea class="validate[required]" name="presentAddress"
                        value="${customerMaster?.presentAddress}" rows="4" cols="27"/>
        </td>

    </tr>
</table>

<table style="float:left ;padding-left: 80px">
    <tr>
        <td>
            <label class="txtright bold hight3x width1x" style="width: 140px;">
                <g:message code="customerMaster.permanentAddress.label" default="Permanent Address"/>
                <span class="mendatory_field">*</span>
            </label>
        </td>
        <td class="element-input inputContainer">
            <g:textArea class="validate[required]" name="permanentAddress"
                        value="${customerMaster?.permanentAddress}" rows="4" cols="27"/>
        </td>
    </tr>
</table>